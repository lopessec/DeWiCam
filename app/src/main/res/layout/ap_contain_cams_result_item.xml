<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    >
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_router_black_24dp"
            android:scaleType="center" />
        <TextView
            android:id="@+id/ap_containCams_result_item_tx_ssid"
            android:text="SSID:     "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="ssidValue"
            android:layout_toRightOf="@id/ap_containCams_result_item_tx_ssid"
            android:id="@+id/ap_containCams_result_item_tx_ssid_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/ap_containCams_result_item_tx_ssid"

            android:id="@+id/ap_containCams_result_item_tx_bssid"
            android:text="BSSID:   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="bssidValue"
            android:id="@+id/ap_containCams_result_item_tx_bssid_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ap_containCams_result_item_tx_bssid"
            android:layout_alignBottom="@+id/ap_containCams_result_item_tx_bssid"
            android:layout_toEndOf="@+id/ap_containCams_result_item_tx_bssid" />
        <TextView
            android:id="@+id/ap_containCams_result_item_tx_camcount"
            android:layout_below="@id/ap_containCams_result_item_tx_bssid"
            android:text="CamCount: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/ap_containCams_result_item_tx_camcount"
            android:layout_below="@id/ap_containCams_result_item_tx_bssid"
            android:id="@+id/ap_containCams_result_item_tx_camcount_value"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView

            android:layout_marginTop="4dp"
            android:nestedScrollingEnabled="false"
            android:layout_below="@id/ap_containCams_result_item_tx_camcount"
            android:id="@+id/ap_containCams_result_item_camlists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </RelativeLayout>



</android.support.v7.widget.CardView>